  "mvp_calculation": {
    "description": "MVP point calculation system for determining best player",
    "point_values": {
      "positive_actions": {
        "common_kill": 1,
        "special_kill": 6,
        "tank_kill_max": 100,
        "witch_kill": 15,
        "heal_teammate": 40,
        "revive_teammate": 25,
        "defib_teammate": 30,
